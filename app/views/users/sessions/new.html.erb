<% title t('signin.title') -%>

<h2><%=t 'signin.title' %></h2>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <p><%= f.email_field :email, placeholder: t('signin.form.email'), autofocus: true %></p>

  <p><%= f.password_field :password, placeholder: t('signin.form.password'), autocomplete: "off" %></p>

  <% if devise_mapping.rememberable? -%>
    <p><%= f.check_box :remember_me %> <%= f.label :remember_me, t('signin.form.remember') %></p>
  <% end -%>

  <p><%= f.submit t('signin.form.submit') %></p>
<% end %>

<%= link_to t('signin.lost.password'), new_password_path(resource_name) %><br />
<%= link_to t('signin.lost.confirmation'), new_confirmation_path(resource_name) %><br />
<%== t('signin.information') %>
