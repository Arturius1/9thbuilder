<% title t('password.title') -%>

<h2><%=t 'password.title' %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <p><%= f.email_field :email, placeholder: t('password.form.email'), autofocus: true %></p>

  <p><%= f.submit t('password.form.submit') %></p>
<% end %>

<%= link_to t('password.lost.confirmation'), new_confirmation_path(resource_name) %><br />
<%=raw t('password.information') %>
