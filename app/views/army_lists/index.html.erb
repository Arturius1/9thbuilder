<div id="subheader" class="grid_14">
  <%= form_tag army_lists_path, :method => "get" do -%>
    <p>
      <label for="filter_army_id">Filtrer par</label> <%= select_tag "search[army_id]", options_from_collection_for_select(@armies, :id, :name, @search[:army_id]), :include_blank => true %>

